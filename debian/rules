#!/usr/bin/make -f

include /usr/share/dpkg/buildflags.mk
include /usr/share/dpkg/pkg-info.mk

DEBVENDOR := $(shell dpkg-vendor --query Vendor)
ifeq ($(DEBVENDOR), Qlustar)
    # Qlustar specific stuff
    include /usr/share/ql-deb-utils/Makefile
endif

%:
	dh $@  --with autoreconf

override_dh_installdocs:
	dh_installdocs README.md AUTHORS

override_dh_auto_test:

override_dh_fixperms:
	dh_fixperms
	chown root.root debian/singularity-container/usr/lib/*/singularity/sexec
	chmod 4755 debian/singularity-container/usr/lib/*/singularity/sexec
	chmod 644 debian/singularity-container/usr/lib/*/singularity/cli/*.help
